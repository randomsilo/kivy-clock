<Label>:
    markup: True
    font_name: 'Aller'
    font_size: 60

<CommandButton@Button>:
    font_name: 'Aller'
    font_size: 25
    bold: True
    border: (2, 2, 2, 2)

BoxLayout:
    orientation: 'vertical'

    Label:
        id: time_label 
        text: '[b]00[/b]:00:00'

    BoxLayout:
        height: 90
        orientation: 'horizontal'
        padding: 20
        spacing: 20
        size_hint: (1, None)

        CommandButton:
            id: start_stop
            text: 'Start'
            on_press: app.start_stop()
        
        CommandButton:
            id: reset
            text: 'Reset'
            on_press: app.reset()
            background_normal: 'red_button_normal.png'
            background_down: 'red_button_down.png'

    Label:
        id: stopwatch 
        text: '00:00.[size=40]00[/size]'
